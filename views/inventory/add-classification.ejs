<h1>
  <%= title %>
</h1>

<%- messages() %>

<p><strong>Note:</strong> Classification name cannot contain spaces or special characters.</p>

<% if (messages.notice) { %>
  <div class="notice">
    <%= messages.notice %>
  </div>
  <% } %>

    <% if (errors && errors.length) { %>
      <ul class="errors">
        <% errors.forEach(e=> { %>
          <li>
            <%= e.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>

        <form action="/inv/add-classification" method="post">
          <label for="classification_name">Classification Name</label>
          <input id="classification_name" name="classification_name" type="text" required pattern="^[A-Za-z0-9]+$"
            title="Letters/numbers only. No spaces or special characters." value="<%= classification_name || '' %>" />
          <button type="submit">Add Classification</button>
        </form>